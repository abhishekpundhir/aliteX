<div class=" row row-cols-lg-3 row-cols-md-2 row-cols-sm-1  mxx " id="mxx">
  <% for (let listing of allListings) { %>
    <a class="listing-link" href="/listings/<%= listing._id %>"> <div class="x-shadow card cal" >
    <img src="<%= listing.image.url %>" class=" card-img-top" alt="listing image" style="height: 20rem;">
    <div class="card-img-overlay"></div>
    <div class="card-body">
     <center> <p class="card-text">
       <b> <%= listing.title %> </b><br>
        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/Day <br>
        

      </p></center>
    </div>
  </div></a>
 
  <% } %>
</div>
  



 
  

